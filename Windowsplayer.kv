MainWidget:

<MainWidget>:
    canvas.before:
        Color:
            rgba: root.background
        Rectangle:
            size: self.size
            #source: "images/57174.jpg"

    RelativeLayout:
        size: root.width, 0.15*root.height
        canvas:
            Color:
                rgba: root.primary
            Rectangle:
                size: root.width, 0.15*root.height

        BoxLayout:
            orientation: "horizontal"
            pos_hint: {"center_x":.25, "center_y":0.06}
            size_hint: 0.3, 0.14

            BoxLayout:
                MDFloatingActionButton:
                    icon: 'cog'
                    on_press: app.open_settings()

            BoxLayout:
                Label:
                    #size_hint_y: None
                    text_size: self.width, None
                    text: root.text

            BoxLayout:
                MDSlider:
                    orientation: 'vertical'
                    id: slider
                    hint: False
                    value: 5
                    max: 100
                    step: 1
                    color: 0.44, 0.74, 0.97
                    size_hint: 1, 1


        MDFloatingActionButton:#pause button
            md_bg_color: root.secondary

            icon: root.center_button

            pos_hint: {"center_x":.75, "center_y":0.06}
            on_press: root.play_pause_state()

        MDFloatingActionButton:# previous button
            md_bg_color: root.secondary

            #size_hint: None, None
            increment_width: dp(0.3*root.width)
            height: dp(0.3*root.height)

            icon: "skip-previous"

            pos_hint: {"center_x":.6, "center_y":0.06}
            on_press: root.previous()

        MDFloatingActionButton:# next button
            md_bg_color: root.secondary

            icon: 'skip-next'

            pos_hint: {"center_x":.9, "center_y":0.06}
            on_press:  root.next()
